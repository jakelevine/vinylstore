<h1>A Vinyl Store, For You</h1>
<h2>Send your friends to <a href="http://<%= request.host+request.fullpath %>"><%= request.host+request.fullpath %></a></h2>
<table class="table">
<% if @results_array.first(3) %>		
<tr>
<% @results_array.first(3).each do |album| %>
	<td>
		<a target = "_blank" href="<%= album.values[0][2] %>">
		<img id="album_img" src="<%= album.values[0][1] %>" width="200px">
		<img id="record_img" src="/assets/vinyl-record.png">
		<br>
		<div id="album_name">
		<%= album.keys[0] %>
		</div>
		<div id ="artist_name">
		<%= album.values[0][0] %>	
		</div>
		</a>
	</td>
<% end %>
</tr>
<% end %>

